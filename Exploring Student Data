# Load libraries
import pandas as pd
import numpy as np
import codecademylib3
import matplotlib.pyplot as plt
import seaborn as sns

# Import data
students = pd.read_csv('students.csv')

# Print first few rows of data
print(students.head())
# Print summary statistics for all columns
print(students.describe())
# Calculate mean
mean_grade = np.mean(students.math_grade)

# Calculate median
median_grade = np.median(students.math_grade)

# Calculate mode
mode_grade = pd.Series(students.math_grade).mode()

# Calculate range
range_grade = students.math_grade.max()-students.math_grade.min()

# Calculate standard deviation
standard_grade = students.math_grade.std()

# Calculate MAD
mad_grade = students.math_grade.mad()

print(mean_grade)
print(median_grade)
print(mode_grade)
print(range_grade)
print(standard_grade)
print(mad_grade)
# Create a histogram of math grades

sns.histplot(x='math_grade', data=students)
plt.show()
plt.clf()

# Create a box plot of math grades

sns.boxplot(x='math_grade', data=students)
plt.show()
plt.clf()

# Calculate number of students with mothers in each job category
mj_counts = students.Mjob.value_counts()
print(mj_counts)

# Calculate proportion of students with mothers in each job category
mj_props = students.Mjob.value_counts(normalize = True)
print(mj_counts)
print(mj_props)

# Create bar chart of Mjob
sns.countplot(x='Mjob', data=students)

plt.show()
plt.clf()

# Create pie chart of Mjob
students.Mjob.value_counts().plot.pie()

plt.show()
